        name = "practices_review",
        type = "agent",
        agent = practices_reviewer and agent_names.practices or nil,
        input = "Check this code for best practices: {{file_content}}"
    })
    
    -- Performance review
    :add_step({
        name = "performance_review",
        type = "agent",
